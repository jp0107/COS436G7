{
  "manifest_version": 3,
  "name": "AI Image Generator",
  "version": "1.0",
  "description": "Chrome extension that generates AI images from text prompts.",
  "permissions": [
    "activeTab",
    "scripting"  
  ],
  "host_permissions": [
    "https://group7jjis.openai.azure.com/*" 
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://group7jjis.openai.azure.com;"
  }
}
